{% extends "_layout/site" %}

{% requireLogin %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ alias('@web/css/pages/new.css') }}"/>
{% endblock %}

{% block content %}

	{% include "_includes/title" %}
<div class="container">
	<form class="new-form" method="post" accept-charset="UTF-8" enctype="multipart/form-data">
			{{ csrfInput() }}
			{{ actionInput('entries/save-entry') }}
			{{ redirectInput('verdiepingsdossiers/{slug}') }}
			{{ hiddenInput('sectionId', '5') }}
			{{ hiddenInput('enabled', '1') }}
		<div class="flex" >
			<div class="form-text">
				<div class="field">
					<label for="title">Naam van het artikel</label>
					{{ input('text', 'title', "", {
						id: 'title',
					}) }}
					{{ _self.errorList(entry.getErrors('title')) }}
				</div>

				<div class="field">
					<label for="excerpt">Intro van het artikel
						<span>(Dit is zichtbaar bij de lijstweergave van artikels)</span>
					</label>
					{{ tag('textarea', {
						id: 'excerpt',
						name: 'fields[excerpt]',
					}) }}
					{{ _self.errorList(entry.getErrors('excerpt')) }}
				</div>
			</div>

			<div class="form-image">
				<div class="field">
					<label for="image">Artikel afbeelding<br><span>(Dit is zichtbaar bij de lijstweergave van artikels)</span></label>
					{{ input('file', 'fields[image]', "" ,{
						id: 'image',
					}) }}
					{{ _self.errorList(entry.getErrors('image')) }}
				</div>
			</div>
		</div>

		<div class="field">
			<label for="categoryThema">Thema's</label>
			<div class="checkboxes flex">
				{% set themes = craft.categories().group("themas").all() %}
				{% for theme in themes %}
					<label>
						{{ input('checkbox', 'fields[categoryThema][]', theme.id, {
							id: theme.slug,
						}) }}
						{{ theme.title }}</label>
				{% endfor %}
				{{ _self.errorList(entry.getErrors('categoryThema')) }}
			</div>
		</div>

		<div class="btn-div">
			<button class="btn" type="submit">Maak</button>
		</div>
	</form>

	{% macro errorList(errors) %}
		{% if errors %}
			{{ ul(errors, {class: 'errors'}) }}
		{% endif %}
	{% endmacro %}
</div>

{% endblock %}
