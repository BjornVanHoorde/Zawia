{% extends "_layout/base" %}

{% block head %}
	{{ parent() }}
	<link rel="stylesheet" href="{{ alias('@web/css/login.css') }}">
{% endblock %}

{% block body %}
	<div class="login flex">
		<div class="form">
      <h1>Log in</h1>
      <p>Nieuwe gebruiker?  <a href="{{ url('register') }}">Vraag toegang aan</a></p>
			<form method="post" accept-charset="UTF-8">
				{{ csrfInput() }}
				{{ actionInput('users/login') }}

        <div class="field">
          <label for="loginName">Gebruikersnaam of email</label>
          {{ input('text', 'loginName', craft.app.user.rememberedUsername, {
            id: 'loginName',
            autocomplete: 'username'
          }) }}
        </div>

        <div class="field">
          <label for="password">Wachtwoord</label>
          {{ input('password', 'password', null, {
            id: 'password',
          }) }}
        </div>

        <div class="field checkbox">
          <label>
            {{ input('checkbox', 'rememberMe', '1') }}
            Onthoud mij
          </label>
        </div>

				<button class="btn btn-primary">Log in</button>

				{% if errorMessage is defined %}
					<p>{{ errorMessage }}</p>
				{% endif %}
			</form>
			<p>
				<a href="{{ url('reset-password') }}">Wachtwoord vergeten?</a>
			</p>
		</div>

    <div class="image">
      <img src="{{ alias('@web/assets/login.png') }}" alt="Login">
	</div>
{% endblock %}
